program pr1;
//
function ПлощадьКвадрата(Сторона: real) := Сторона * Сторона;
function ПлощадьПрямоугольника(Длина, Ширина: real) := Длина * Ширина;
function ПлощадьТреугольника(Основание, Высота: real) := Основание * Высота / 2;
function ПлощадьКруга(Радиус: real) := Pi * Радиус ** 2;
function ПлощадьТрапеция(Основание, Высота, ВерхняяСторона: real) := ((Основание+ВерхняяСторона)/2)*Высота;
//
procedure КвадратВвод(var Сторона: real) := Сторона := ReadReal('Введите длину стороны квадрата:');

procedure ПрямоугольникВвод(var Длина, Ширина: real);
begin
  Длина := ReadReal('Введите длину стороны прямоугольника:');
  Ширина := ReadReal('Введите ширину стороны прямоунольника:')
end;

procedure ТреугольникВвод(var Основание, Высота: real);
begin
  Основание := ReadReal('Введите длину основания треугольника:');
  Высота := ReadReal('Введите высоту треугольника:')
end;

procedure ТрапецияВвод(var Основание, Высота, ВерхняяСторона: real);
begin
  Основание := ReadReal('Введите длину основания трапеции:');
  ВерхняяСторона := ReadReal('Введите верхнюю сторону трапеции:');
  Высота := ReadReal('Введите высоту трапеции:')
end;

procedure КругВвод(var Радиус: real) := Радиус := ReadReal('Введите радиус круга');
    
procedure РасчетПлощади;
begin
  Println('Расчет площади плоской фигуры');
  Println('Введите 1 - квадрат, 2 - прямоугольник, 3 - треугольник, 4 - круг, 5 - трапеция');
  case ReadInteger of
     1: begin
         var a: real;
         КвадратВвод(a);
         Print('Площадь квадрата равна', ПлощадьКвадрата(a))
       end;
    2: begin
         var a, b: real;
         ПрямоугольникВвод(a, b);
         Print('Площадь прямоугольника равна', ПлощадьПрямоугольника(a, b))
       end;
    3: begin
         var a, h: real;
         ТреугольникВвод(a, h);
         Print('Площадь треугольника равна', ПлощадьТреугольника(a, h))
       end;
    4: begin
         var r: real;
         КругВвод(r);
         Print('Площадь круга равна', ПлощадьКруга(r))
       end;
     5: begin
        var a, h, b: real;
        ТрапецияВвод(a, h, b);
        Print('Площадь трапеции равна', ПлощадьТрапеция(a, h, b))
        end;
    else
      Print('Введен неверный признак')
  end;
end;

begin
  РасчетПлощади  
end.
